{
  "name": "advanced-rest-client",
  "description": "The Advanced REST Client desktop application.",
  "version": "11.0.30",
  "homepage": "https://advancedrestclient.com/",
  "license": "LICENSE.md",
  "author": {
    "name": "Pawel Psztyc",
    "email": "arc@mulesoft.com"
  },
  "repository": {
    "url": "https://github.com/advanced-rest-client/arc-electron"
  },
  "scripts": {
    "start": "electron .",
    "postinstall": "electron-builder install-app-deps",
    "build-l": "npx electron-builder -l",
    "build-w": "npx electron-builder -w",
    "build-m": "npx electron-builder -m"
  },
  "main": "main.js",
  "devDependencies": {
    "electron": "~1.7.8",
    "electron-builder": "^19.45.4"
  },
  "dependencies": {
    "electron-log": "^2.2.9",
    "electron-updater": "^2.16.1",
    "form-data": "^2.3.1",
    "fs-extra": "^4.0.2",
    "node-fetch": "^1.7.3",
    "ntlm": "^0.1.3",
    "uuid": "^3.1.0"
  },
  "build": {
    "appId": "com.mulesoft.arc",
    "productName": "Advanced REST Client",
    "artifactName": "arc-${version}-${arch}.${ext}",
    "asar": true,
    "copyright": "Copyright Â© 2017 Mulesoft",
    "detectUpdateChannel": true,
    "files": [
      "app.html",
      "main.js",
      "package.json",
      "assets/",
      "bower_components/",
      "menus/",
      "scripts/",
      "src/",
      "styles/"
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
      "icon": "build/icon.icns",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "dmg": {
      "contents": [
        {
          "x": 110,
          "y": 150
        },
        {
          "x": 240,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "linux": {
      "category": "Development",
      "target": [
        {
          "target": "deb",
          "arch": [
            "x64",
            "ia32"
          ]
        },
        {
          "target": "rpm",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ],
      "vendor": "Mulesoft",
      "synopsis": "A developert tool to test a HTTP request"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ]
    },
    "publish": [
      {
        "provider": "github",
        "owner": "advanced-rest-client",
        "repo": "arc-electron"
      }
    ],
    "protocols": {
      "name": "ARC file open",
      "schemes": [
        "arc-file"
      ]
    },
    "nsis": {
      "installerIcon": "build/icon.ico",
      "uninstallerIcon": "build/icon.ico",
      "artifactName": "arc-${version}-setup.${ext}",
      "shortcutName": "ARC"
    }
  },
  "oauth2": {
    "client_id": "1076318174169-u4a5d3j2v0tbie1jnjgsluqk1ti7ged3.apps.googleusercontent.com",
    "auth_uri": "https://accounts.google.com/o/oauth2/v2/auth",
    "redirect_uri": "https://auth.advancedrestclient.com/oauth2",
    "scopes": [
      "https://www.googleapis.com/auth/drive.file",
      "https://www.googleapis.com/auth/drive.install",
      "https://www.googleapis.com/auth/drive.metadata.readonly"
    ]
  }
}
