{
  "name": "advanced-rest-client",
  "description": "The Advanced REST Client desktop application.",
  "version": "11.0.0",
  "homepage": "https://advancedrestclient.com/",
  "license": "LICENSE.md",
  "author": {
    "name": "Pawel Psztyc",
    "email": "arc@mulesoft.com"
  },
  "repository": {
    "url": "https://github.com/advanced-rest-client/arc-electron"
  },
  "scripts": {
    "start": "electron .",
    "postinstall": "electron-builder install-app-deps",
    "build-l": "npx electron-builder -l",
    "build-w": "npx electron-builder -w",
    "build-m": "npx electron-builder -m"
  },
  "main": "app/main.js",
  "devDependencies": {
    "electron": "~1.7.8",
    "electron-builder": "^19.34.1"
  },
  "dependencies": {
    "electron-log": "^2.2.9",
    "electron-updater": "^2.10.1",
    "form-data": "^2.3.1",
    "fs-extra": "^4.0.2",
    "node-gyp": "^3.6.2",
    "node-pre-gyp": "^0.6.38",
    "ntlm": "^0.1.3"
  },
  "build": {
    "appId": "com.mulesoft.arc",
    "productName": "Advanced REST Client",
    "artifactName": "${productName}-${version}-${arch}.${ext}",
    "asar": true,
    "copyright": "Copyright Â© year Mulesoft",
    "files": [
      "app"
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
      "target": [{
        "target": "dmg",
        "arch": ["x64"]
        }]
    },
    "dmg": {
      "contents": [
        {
          "x": 110,
          "y": 150
        },
        {
          "x": 240,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "linux": {
      "category": "Development",
      "target": [{
          "target": "deb",
          "arch": ["x64", "ia32"]
        }, {
          "target": "rpm",
          "arch": ["x64", "ia32"]
        }
      ],
      "vendor": "Mulesoft",
      "synopsis": "A developert tool to test a HTTP request"
    },
    "win": {
      "artifactName": "arc-${version}-${arch}.${ext}",
      "target": [{
        "target": "nsis",
        "arch": ["x64", "ia32"]
      }]
    },
    "publish": [
      {
        "provider": "github",
        "owner": "advanced-rest-client",
        "repo": "arc-electron"
      }
    ]
  }
}
